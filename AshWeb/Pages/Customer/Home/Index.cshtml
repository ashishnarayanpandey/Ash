@page
@model AshWeb.Pages.Customer.Home.IndexModel
@{
}
<div class="row container pb-3 bg-white">
    @foreach (var category in Model.CategoryList)
    {
        <h2 class="text-success pl-1">@category.Name</h2>
        <div class="row my-3">
            @foreach (var menuItem in Model.MenuItemList.Where(u => u.Categoryid == category.id))
            {
                <div class="col-lg-4 col-md-6 pb-4 filter">
                    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
                        <div class="card-body pb-1 row">
                            <div class="col-8 h5">@menuItem.Name</div>
                            <div class="col-4 text-end"><span class="text-info h4">₹</span>@menuItem.Price</div>
                        </div>
                        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@menuItem.Image" alt="Menu Item Image" style="height:200px; width:200px" />
                        <div class="card-body p-1 px-3 row">
                            <div class="col-6">
                                <span class="badge p-2 border w-100 text-dark bg-warning">@category.Name</span>
                            </div>
                            <div class="col-6 border-0">
                                <span class="badge p-2 border w-100 bg-info">@menuItem.Name</span>
                            </div>
                            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                                <p>@Html.Raw(menuItem.Description)</p>
                            </div>
                            <div class="col-12 pl-1">
                                <a asp-page="Details" asp-route-id="@menuItem.id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
